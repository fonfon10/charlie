<%= render 'shared/errors', obj: @hit %>

<div class="row">
    
    <%= form_for(@hit, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
        <div class="col-sm-1">
          <% (0..9).each do |i| %>
            <div class="btn-group" data-toggle="buttons">
              <br>
              <label class="btn btn-primary btn-digits ">
                <input type="radio" name="digit_left" value= '<%= i %>' id="option1" autocomplete="off" checked> <%= i %>
              </label>
            </div>
          <% end %>
        </div>

        <div class="col-sm-1">
          <% (0..9).each do |i| %>
            <div class="btn-group" data-toggle="buttons">
              <br>
              <label class="btn btn-primary btn-digits ">
                <input type="radio" name="digit_right" value= '<%= i %>' id="option1" autocomplete="off" checked> <%= i %>
              </label>
            </div>
          <% end %>
        </div>



       <div class="form-group">
         <div class="control-label col-sm-1">
         </div>
           <div class="col-sm-1">
             <%= f.label "Head" %> <br />
             <%= f.check_box :head, {:checked => 1, :unchecked => 0} %> <br />
           </div>
           <div class="col-sm-1">
             <%= f.label "Chest" %> <br />
             <%= f.check_box :chest, {:checked => 1, :unchecked => 0} %> <br />
           </div>
           <div class="col-sm-1">
             <%= f.label "Back" %> <br />
             <%= f.check_box :back, {:checked => 1, :unchecked => 0} %> <br />
           </div>
 
 
           </div>
       </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>
    <% end %>    



    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%=  link_to "Cancel request and return to recipe listing", '#' %>]

    </div>



</div>

