<%= render 'shared/errors', obj: @hit %>

<div class="row">
  <div class="col-md-12">
    
    <%= form_for(@hit, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
        </div>
          <div class="col-md-8">
            <%= f.radio_button :player_id, '1', :checked => true %> 
            <%= label :player_id, '1' %>
            <%= f.radio_button :player_id, '2' %>
            <%= label :player_id, '2' %>
          </div>
      </div>

    <div class="field">
        <%= f.label "Head" %> <br />
        <%= f.check_box :head, {:checked => 1, :unchecked => 0} %> <br />
    </div>







      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>
    <% end %>    

    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%=  link_to "Cancel request and return to recipe listing", '#' %>]

    </div>


  </div>

</div>

