<%= render 'shared/errors', obj: @hit %>

<div class="row">
    
    <%= form_for(@hit, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
        <div class="col-sm-1">
            <div class="btn-group" data-toggle="buttons">
              <br>
              <label class="btn btn-primary active btn-digits ">
                <input type="radio" name="digit_left" value= "0" id="digit_left0" autocomplete="off">0
              </label>

              <% (1..9).each do |i| %>
                 <br>
                  <label class="btn btn-primary btn-digits">
                    <input type="radio" name="digit_left" value= '<%= i %>' id='digit_left<%= i %>' autocomplete="off"> <%= i %>
                  </label>
              <% end %>

            </div>
        </div>
        <div class="col-sm-1">
            <div class="btn-group" data-toggle="buttons">
              <br>
              <label class="btn btn-primary active btn-digits ">
                <input type="radio" name="digit_right" value= "0" id="digit_right0" autocomplete="off">0
              </label>

              <% (1..9).each do |i| %>
                 <br>
                  <label class="btn btn-primary btn-digits">
                    <input type="radio" name="digit_right" value= '<%= i %>' id='digit_right<%= i %>' autocomplete="off"> <%= i %>
                  </label>
              <% end %>

            </div>
        </div>



        <div class="col-sm-3">
            <div class="btn-group" data-toggle="buttons">
              <br>
              <label class="btn btn-primary  ">
                <input type="checkbox" name="head_state" value="1" autocomplete="off">Head
              </label>

            </div>
        </div>


       <div class="col-sm-1">
         <%= f.label "Chest" %> <br />
         <%= f.check_box :chest, {:checked => 1, :unchecked => 0} %> <br />
       </div>
       <div class="col-sm-1">
         <%= f.label "Back" %> <br />
         <%= f.check_box :back, {:checked => 1, :unchecked => 0} %> <br />
       </div>       

      <div class="col-md-offset-2 col-md-10">
        <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
      </div>
      <% end %>    

</div>



</div>

